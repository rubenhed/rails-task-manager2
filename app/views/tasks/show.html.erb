<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>Task is completed!! happyface</p>
<% else %>
  <p>Task is not yet completed sadface</p>
<% end %>

<p><%= link_to "Edit task", edit_task_path(@task) %></p>

<p><%= link_to "Delete task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>

<p><%= link_to "Back to tasks", tasks_path %></p>
